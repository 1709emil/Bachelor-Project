<Window x:Class="VisualWorkflowBuilder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:VisualWorkflowBuilder.Core.Entities"
        Title="Visual Workflow Builder" Height="Auto" Width="auto"
        Name="mainWindow">
    <!-- Main Layout -->
    <Grid Background="{DynamicResource Brush.SurfaceAlt}">
        <Grid.RowDefinitions>
            <RowDefinition Height="56"/>   <!-- Nav bar -->
            <RowDefinition Height="*"/>    <!-- Main area -->
        </Grid.RowDefinitions>

        <!-- Top Navigation Bar -->
        <Border Grid.Row="0"
                Background="{DynamicResource Brush.SurfaceAlt}"
                BorderBrush="{DynamicResource Brush.Border}"
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0">
                    <TextBlock Text="Nav Bar" FontSize="16" FontWeight="Bold"/>
                    <Separator Width="16" Opacity="0"/>
                    <TextBlock Text="•" Foreground="{DynamicResource Brush.TextMuted}" Margin="0,0,6,0"/>
                    <TextBlock Text="Placeholder" Foreground="{DynamicResource Brush.TextMuted}"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,12,0">
                    <Button Content="Generate Workflow File" Padding="10,6" Margin="0,0,8,0"
                            Background="{DynamicResource Brush.Accent}" Foreground="White"
                            BorderBrush="{x:Null}" 
                            Command="{Binding SaveWorkflowCommand}"/>
                    <Button Content="Edit Workflow Config Settings" Padding="10,6"
                            Background="{DynamicResource Brush.Surface}" 
                            Foreground="{DynamicResource Brush.TextPrimary}"
                            BorderBrush="{DynamicResource Brush.Border}" 
                            Command="{Binding ShowEditWorkFlowConfigSettingsWindowCommand}"
                            />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Area (Sidebar + Workspace) -->
        <Grid Grid.Row="1" Background="{DynamicResource Brush.Window}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260" MinWidth="160"/> <!-- Sidebar -->
                <ColumnDefinition Width="6"/>  <!-- Splitter -->
                <ColumnDefinition Width="*"/>  <!-- Workspace -->
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Border Grid.Column="0" Style="{StaticResource Card}">
                <DockPanel LastChildFill="True" Background="{DynamicResource Brush.Surface}">
                    <TextBlock Text="Elements" FontWeight="SemiBold" FontSize="14" Margin="2,0,0,8"/>
                    <Separator DockPanel.Dock="Top" Height="1" Margin="0,8,0,8"
                               Background="{DynamicResource Brush.Border}"/>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Background="Transparent">
                        <StackPanel>
                            <Border BorderBrush="{DynamicResource Brush.Border}" 
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Padding="8"
                                    Margin="8"
                                    Background="{DynamicResource Brush.GreenBack}">
                                <StackPanel>
                                    <TextBlock Text="Custom Job"
                                               FontWeight="Bold"
                                               FontSize="14"
                                               Margin="0,0,0,6"
                                               Foreground="{DynamicResource Brush.SurfaceAlt}"
                                               />

                                    <Button Content="Add"
                                            HorizontalAlignment="Right"
                                            Padding="10,4"
                                            Background="{DynamicResource Brush.Accent}"
                                            Foreground="White"
                                            BorderBrush="{x:Null}"
                                            Command="{Binding AddJobToWorkspaceCommand }"
                                            />
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </DockPanel>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1"
                          Width="6"
                          HorizontalAlignment="Stretch"
                          Background="{DynamicResource Brush.Border}"
                          ResizeBehavior="PreviousAndNext"
                          ShowsPreview="True"/>

            <!-- Workspace -->
            <Border Grid.Column="2" Style="{StaticResource Card}">
                <!-- Put connector Canvas and ItemsControl inside the same ScrollViewer content so lines and nodes share coordinates and scroll together -->
                <ScrollViewer x:Name="WorkspaceScrollViewer" Background="{DynamicResource Brush.SurfaceAlt}"
                              HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <Grid x:Name="WorkspaceGrid">
                        <!-- Connector canvas sits behind nodes -->
                        <Canvas x:Name="ConnectorCanvas" IsHitTestVisible="False" Background="Transparent"/>
                        <!-- Nodes -->
                        <ItemsControl x:Name="JobsItemsControl" ItemsSource="{Binding Nodes}">
                            <!-- Canvas as layout surface -->
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <!-- Position each node by binding to Node.CanvasLeft/CanvasTop -->
                            <ItemsControl.ItemContainerStyle>
                                <Style TargetType="ContentPresenter">
                                    <Setter Property="Canvas.Left" Value="{Binding CanvasLeft}" />
                                    <Setter Property="Canvas.Top" Value="{Binding CanvasTop}" />
                                </Style>
                            </ItemsControl.ItemContainerStyle>

                            <!-- Node appearance (DataContext is JobNodeViewModel) -->
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="8"
                                            Padding="12"
                                            Background="{DynamicResource Brush.Surface}"
                                            BorderBrush="{DynamicResource Brush.Border}"
                                            BorderThickness="1"
                                            Margin="4"
                                            MinWidth="160" MinHeight="100"
                                            MouseLeftButtonDown="Node_MouseLeftButtonDown"
                                            MouseMove="Node_MouseMove"
                                            MouseLeftButtonUp="Node_MouseLeftButtonUp">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition/>          <!-- Centered content -->
                                                <RowDefinition Height="Auto"/> <!-- Bottom button -->
                                            </Grid.RowDefinitions>

                                            <!-- Centered Job name -->
                                            <TextBlock Text="{Binding Job.Name}"
                                                       Foreground="{DynamicResource Brush.TextPrimary}"
                                                       FontSize="14"
                                                       FontWeight="SemiBold"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Center"/>

                                            <!-- Bottom buttons -->
                                            <StackPanel Grid.Row="1"
                                                       Orientation="Horizontal"
                                                       HorizontalAlignment="Right"
                                                       Margin="0,10,0,0">
                                                <Button Content="Edit"
                                                        Padding="14,6"
                                                        Margin="0,0,8,0"
                                                        Background="{DynamicResource Brush.Accent}"
                                                        Foreground="White"
                                                        BorderBrush="{x:Null}"
                                                        FontWeight="SemiBold"
                                                        Command="{Binding DataContext.ShowEditWindowCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                        CommandParameter="{Binding}"/>
                                                <Button Content="Remove"
                                                        Padding="14,6"
                                                        Background="{DynamicResource Brush.Accent}"
                                                        Foreground="White"
                                                        BorderBrush="{x:Null}"
                                                        FontWeight="SemiBold"
                                                        Command="{Binding DataContext.RemoveJobFromWorkspaceCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                        CommandParameter="{Binding}"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>

                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Window>