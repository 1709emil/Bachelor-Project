<Window x:Class="VisualWorkflowBuilder.Presentation.Views.EditStepWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Step"
        Height="450"
        Width="520"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource Brush.SurfaceAlt}"
        Foreground="{DynamicResource Brush.TextPrimary}">
    <Border Margin="12"
            Background="{DynamicResource Brush.Surface}"
            BorderBrush="{DynamicResource Brush.Border}"
            BorderThickness="1"
            CornerRadius="8">
        <Grid Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0,0,0,8">
                <TextBlock Text="Step" FontSize="16" FontWeight="Bold" Margin="0,0,0,8"
                           Foreground="{DynamicResource Brush.TextPrimary}"/>
                <UniformGrid Columns="2" Margin="0,0,0,8">
                    <TextBlock Text="Name:" VerticalAlignment="Center" Margin="0,0,8,0"
                               Foreground="{DynamicResource Brush.TextMuted}"/>
                    <TextBox Text="{Binding Step.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Background="{DynamicResource Brush.Window}"
                             Foreground="{DynamicResource Brush.TextPrimary}"
                             BorderBrush="{DynamicResource Brush.Border}" />

                    <TextBlock Text="Uses:" VerticalAlignment="Center" Margin="0,6,8,0"
                               Foreground="{DynamicResource Brush.TextMuted}"/>
                    <TextBox Text="{Binding Step.Uses, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Background="{DynamicResource Brush.Window}"
                             Foreground="{DynamicResource Brush.TextPrimary}"
                             BorderBrush="{DynamicResource Brush.Border}" />

                    <TextBlock Text="Run:" VerticalAlignment="Center" Margin="0,6,8,0"
                               Foreground="{DynamicResource Brush.TextMuted}"/>
                    <TextBox Text="{Binding Step.Run, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Background="{DynamicResource Brush.Window}"
                             Foreground="{DynamicResource Brush.TextPrimary}"
                             BorderBrush="{DynamicResource Brush.Border}" />
                </UniformGrid>
            </StackPanel>

            <!-- Middle: With and Env -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="8" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <!-- With -->
                <GroupBox Header="With" Grid.Column="0"
                          Background="{DynamicResource Brush.Surface}"
                          BorderBrush="{DynamicResource Brush.Border}"
                          Foreground="{DynamicResource Brush.TextPrimary}">
                    <DockPanel>
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,4,0,8">
                            <Button Content="Add" Padding="6,3" Margin="0,0,8,0" Command="{Binding AddWithEntryCommand}"
                                    Background="{DynamicResource Brush.Accent}"
                                    Foreground="White"
                                    BorderBrush="{x:Null}" />
                        </StackPanel>
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding With}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <DockPanel Margin="0,4,0,4">
                                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                                                <TextBlock Text="Key:" Margin="0,0,0,4"
                                                           Foreground="{DynamicResource Brush.TextMuted}"/>
                                                <TextBox Width="120" Margin="0,0,8,0"
                                                         Text="{Binding Key, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                         Background="{DynamicResource Brush.Window}"
                                                         Foreground="{DynamicResource Brush.TextPrimary}"
                                                         BorderBrush="{DynamicResource Brush.Border}" />
                                                <TextBlock Text="Value:" Margin="0,0,0,4"
                                                           Foreground="{DynamicResource Brush.TextMuted}"/>
                                                <TextBox Width="160" Margin="0,0,8,0"
                                                         Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                         Background="{DynamicResource Brush.Window}"
                                                         Foreground="{DynamicResource Brush.TextPrimary}"
                                                         BorderBrush="{DynamicResource Brush.Border}" />
                                            </StackPanel>
                                            <Button Content="Remove"
                                                    Command="{Binding DataContext.RemoveWithEntryCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}" HorizontalAlignment="Right"
                                                    Background="{DynamicResource Brush.Surface}"
                                                    BorderBrush="{DynamicResource Brush.Border}"
                                                    Foreground="{DynamicResource Brush.TextPrimary}" />
                                        </DockPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </DockPanel>
                </GroupBox>

                <!-- Env -->
                <GroupBox Header="Environment Variables" Grid.Column="2"
                          Background="{DynamicResource Brush.Surface}"
                          BorderBrush="{DynamicResource Brush.Border}"
                          Foreground="{DynamicResource Brush.TextPrimary}">
                    <DockPanel>
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,4,0,8">
                            <Button Content="Add" Padding="6,3" Margin="0,0,8,0" Command="{Binding AddEnvEntryCommand}"
                                    Background="{DynamicResource Brush.Accent}"
                                    Foreground="White"
                                    BorderBrush="{x:Null}" />
                        </StackPanel>
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding Env}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <DockPanel Margin="0,4,0,4">
                                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                                                <TextBlock Text="Key:" Margin="0,0,0,4"
                                                           Foreground="{DynamicResource Brush.TextMuted}"/>
                                                <TextBox Width="120" Margin="0,0,8,0"
                                                         Text="{Binding Key, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                         Background="{DynamicResource Brush.Window}"
                                                         Foreground="{DynamicResource Brush.TextPrimary}"
                                                         BorderBrush="{DynamicResource Brush.Border}" />
                                                <TextBlock Text="Value:" Margin="0,0,0,4"
                                                           Foreground="{DynamicResource Brush.TextMuted}"/>
                                                <TextBox Width="160" Margin="0,0,8,0"
                                                         Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                         Background="{DynamicResource Brush.Window}"
                                                         Foreground="{DynamicResource Brush.TextPrimary}"
                                                         BorderBrush="{DynamicResource Brush.Border}" />
                                            </StackPanel>
                                            <Button Content="Remove"
                                                    Command="{Binding DataContext.RemoveEnvEntryCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}" HorizontalAlignment="Right"
                                                    Background="{DynamicResource Brush.Surface}"
                                                    BorderBrush="{DynamicResource Brush.Border}"
                                                    Foreground="{DynamicResource Brush.TextPrimary}" />
                                        </DockPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </DockPanel>
                </GroupBox>
            </Grid>

            <!-- Footer: Save / Cancel -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="2" Margin="0,12,0,0">
                <Button Content="Cancel" Width="90" Margin="0,0,8,0"
                        Command="{Binding CancelCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        Background="{DynamicResource Brush.Surface}"
                        BorderBrush="{DynamicResource Brush.Border}"
                        Foreground="{DynamicResource Brush.TextMuted}" />
                <Button Content="Save" Width="90"
                        Command="{Binding SaveCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        Background="{DynamicResource Brush.Accent}"
                        Foreground="White"
                        BorderBrush="{x:Null}" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
