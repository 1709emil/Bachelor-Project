<Window x:Class="VisualWorkflowBuilder.Presentation.Views.EditStepWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Step"
        Height="640"
        Width="760"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource Brush.SurfaceAlt}"
        Foreground="{DynamicResource Brush.TextPrimary}">
    <Border Margin="12"
            Background="{DynamicResource Brush.Surface}"
            BorderBrush="{DynamicResource Brush.Border}"
            BorderThickness="1"
            CornerRadius="8">
        <Grid Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>  
                <RowDefinition Height="Auto"/>   
                <RowDefinition Height="*" />    
                <RowDefinition Height="Auto"/>   
            </Grid.RowDefinitions>

            <!-- Header: Name + Uses -->
            <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0,0,0,8">
                <TextBlock Text="Step" FontSize="16" FontWeight="Bold" Margin="0,0,0,8"
                           Foreground="{DynamicResource Brush.TextPrimary}"/>
                <UniformGrid Columns="2" Margin="0,0,0,8">
                    <TextBlock Text="Name:" VerticalAlignment="Center" Margin="0,0,8,0"
                               Foreground="{DynamicResource Brush.TextMuted}"/>
                    <TextBox Text="{Binding Step.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Background="{DynamicResource Brush.Window}"
                             Foreground="{DynamicResource Brush.TextPrimary}"
                             BorderBrush="{DynamicResource Brush.Border}" />

                    <TextBlock Text="Uses:" VerticalAlignment="Center" Margin="0,6,8,0"
                               Foreground="{DynamicResource Brush.TextMuted}"/>
                    <TextBox Text="{Binding Step.Uses, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Background="{DynamicResource Brush.Window}"
                             Foreground="{DynamicResource Brush.TextPrimary}"
                             BorderBrush="{DynamicResource Brush.Border}" />
                </UniformGrid>
            </StackPanel>

         
            <StackPanel Grid.Row="1" Margin="0,0,0,12">
                <TextBlock Text="Run:" Margin="0,0,0,4" Foreground="{DynamicResource Brush.TextMuted}"/>
                <TextBox Text="{Binding Step.Run, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Background="{DynamicResource Brush.Window}"
                         Foreground="{DynamicResource Brush.TextPrimary}"
                         BorderBrush="{DynamicResource Brush.Border}"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         MinHeight="180"
                         MaxHeight="360"
                         Padding="8"
                         FontFamily="Consolas, Courier New, monospace"/>
            </StackPanel>

           
            <Grid Grid.Row="2" Margin="0,4,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="360" />
                    <ColumnDefinition Width="12" />
                    <ColumnDefinition Width="360" />
                </Grid.ColumnDefinitions>

                <!-- With -->
                <GroupBox Header="With" Grid.Column="0"
                          Background="{DynamicResource Brush.Surface}"
                          BorderBrush="{DynamicResource Brush.Border}"
                          Foreground="{DynamicResource Brush.TextPrimary}"
                          MinHeight="140" MaxHeight="320" Padding="6">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
                            <Button Content="Add" Padding="6,4" Margin="0,0,8,0" Command="{Binding AddWithEntryCommand}"
                                    Background="{DynamicResource Brush.Accent}"
                                    Foreground="White"
                                    BorderBrush="{x:Null}" Width="76"/>
                        </StackPanel>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding With}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,4,0,4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Orientation="Horizontal" Grid.Column="0">
                                                <StackPanel Orientation="Vertical">
                                                    <TextBlock Text="Key:" FontSize="11" Foreground="{DynamicResource Brush.TextMuted}" Margin="0,0,0,4"/>
                                                    <TextBox Text="{Binding Key, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                             Width="140"
                                                             Background="{DynamicResource Brush.Window}"
                                                             Foreground="{DynamicResource Brush.TextPrimary}"
                                                             BorderBrush="{DynamicResource Brush.Border}" />
                                                </StackPanel>

                                                <StackPanel Orientation="Vertical" Margin="8,0,0,0">
                                                    <TextBlock Text="Value:" FontSize="11" Foreground="{DynamicResource Brush.TextMuted}" Margin="0,0,0,4"/>
                                                    <TextBox Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                             Width="180"
                                                             Background="{DynamicResource Brush.Window}"
                                                             Foreground="{DynamicResource Brush.TextPrimary}"
                                                             BorderBrush="{DynamicResource Brush.Border}" />
                                                </StackPanel>
                                            </StackPanel>

                                            <Button Grid.Column="1" Content="Remove"
                                                    Command="{Binding DataContext.RemoveWithEntryCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    VerticalAlignment="Top"
                                                    Margin="8,0,0,0"
                                                    Background="{DynamicResource Brush.Surface}"
                                                    BorderBrush="{DynamicResource Brush.Border}"
                                                    Foreground="{DynamicResource Brush.TextPrimary}"
                                                    Width="74"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </GroupBox>

                <!-- Env -->
                <GroupBox Header="Environment Variables" Grid.Column="2"
                          Background="{DynamicResource Brush.Surface}"
                          BorderBrush="{DynamicResource Brush.Border}"
                          Foreground="{DynamicResource Brush.TextPrimary}"
                          MinHeight="140" MaxHeight="320" Padding="6">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
                            <Button Content="Add" Padding="6,4" Margin="0,0,8,0" Command="{Binding AddEnvEntryCommand}"
                                    Background="{DynamicResource Brush.Accent}"
                                    Foreground="White"
                                    BorderBrush="{x:Null}" Width="76"/>
                        </StackPanel>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding Env}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,4,0,4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Orientation="Horizontal" Grid.Column="0">
                                                <StackPanel Orientation="Vertical">
                                                    <TextBlock Text="Key:" FontSize="11" Foreground="{DynamicResource Brush.TextMuted}" Margin="0,0,0,4"/>
                                                    <TextBox Text="{Binding Key, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                             Width="140"
                                                             Background="{DynamicResource Brush.Window}"
                                                             Foreground="{DynamicResource Brush.TextPrimary}"
                                                             BorderBrush="{DynamicResource Brush.Border}" />
                                                </StackPanel>

                                                <StackPanel Orientation="Vertical" Margin="8,0,0,0">
                                                    <TextBlock Text="Value:" FontSize="11" Foreground="{DynamicResource Brush.TextMuted}" Margin="0,0,0,4"/>
                                                    <TextBox Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                             Width="180"
                                                             Background="{DynamicResource Brush.Window}"
                                                             Foreground="{DynamicResource Brush.TextPrimary}"
                                                             BorderBrush="{DynamicResource Brush.Border}" />
                                                </StackPanel>
                                            </StackPanel>

                                            <Button Grid.Column="1" Content="Remove"
                                                    Command="{Binding DataContext.RemoveEnvEntryCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    VerticalAlignment="Top"
                                                    Margin="8,0,0,0"
                                                    Background="{DynamicResource Brush.Surface}"
                                                    BorderBrush="{DynamicResource Brush.Border}"
                                                    Foreground="{DynamicResource Brush.TextPrimary}"
                                                    Width="74"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </GroupBox>
            </Grid>

            <!-- Footer: Save / Cancel -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="3" Margin="0,12,0,0">
                <Button Content="Cancel" Width="90" Margin="0,0,8,0"
                        Command="{Binding CancelCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        Background="{DynamicResource Brush.Surface}"
                        BorderBrush="{DynamicResource Brush.Border}"
                        Foreground="{DynamicResource Brush.TextMuted}" />
                <Button Content="Save" Width="90"
                        Command="{Binding SaveCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        Background="{DynamicResource Brush.Accent}"
                        Foreground="White"
                        BorderBrush="{x:Null}" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
